<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp"
    android:id="@+id/detailFilm"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgFilm"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginEnd="15dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/nameFilm"
            android:layout_toEndOf="@id/imgFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/judul_film_item"/>

        <TextView
            android:id="@+id/dateFilm"
            android:layout_toEndOf="@id/imgFilm"
            android:layout_below="@id/nameFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_film"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>